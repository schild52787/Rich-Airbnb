# Email (IMAP) credentials for parsing Airbnb notifications
IMAP_HOST=imap.gmail.com
IMAP_USER=your-dedicated-email@gmail.com
IMAP_PASSWORD=your-app-password

# Twilio (for SMS to cleaners)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+15551234567

# Optional: SMTP for outbound emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Database (default: SQLite in project root)
DATABASE_URL=sqlite:///proppilot.db
